{{#if posts.length}}
<section>
  <h2>Post History</h2>
    {{#each posts as |post|}}
      {{> dashboard-detail post}}
    {{/each}}

</section>
{{/if}}

<div style="display: flex; justify-content: center;">
  <button type="submit" class="btn">
    <a class="link" href="/dashboard/new" style="text-decoration: none;">Add New Post</a>
  </button>
</div>

